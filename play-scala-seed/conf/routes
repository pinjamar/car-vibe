# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET           /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Car Adverts
GET           /car/adverts                controllers.CarAdvertRestController.getAllAdverts(sortBy: Option[String])
GET           /car/adverts/:itemId        controllers.CarAdvertRestController.getAdvertById(itemId: Long)
PUT           /car/adverts/:itemId        controllers.CarAdvertRestController.editAdvertById(itemId: Long)
POST          /car/adverts                controllers.CarAdvertRestController.addNewAdvert
DELETE        /car/adverts/:itemId        controllers.CarAdvertRestController.deleteAdvert(itemId: Long)

# Fuel Types
GET           /car/fuels                  controllers.FuelTypeController.all

# ToDo Fields - To Remove
GET           /todo                       controllers.ToDoListController.getAll
GET           /todo/:itemId               controllers.ToDoListController.getById(itemId: Long)
PUT           /todo/done/:itemId          controllers.ToDoListController.updateItem(itemId: Long)
DELETE        /todo/done                  controllers.ToDoListController.deleteAllDone
DELETE        /todo/done/:itemId          controllers.ToDoListController.delete(itemId: Long)
POST          /todo                       controllers.ToDoListController.addNewItem
